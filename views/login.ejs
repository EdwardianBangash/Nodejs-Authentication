<%- include('./includes/header') %>
<div class="container">
    <div class="row mt-5">
      <div class="col-md-6 m-auto">
        <div class="card p-2">
          <div class="card-body">
            <h2 class="card-title text-center"><i class="fas fa-sign-in-alt"></i> Login</h2>
            <%- include('./partials/message') %>
            <form action="/login" method="POST">
              <fieldset>
                <div class="form-group">
                  <label for="email-address">Email address:</label>
                  <input type="text" name="email" class="form-control mt-1" id="email-address" placeholder="Email...">
                </div>
                <div class="form-group mt-2">
                  <label for="password">Password:</label>
                  <input type="password" name="password" class="form-control mt-1" id="password" placeholder="Password...">
                </div>
                <div class="d-grid gap-2 mt-2">
                    <button class="btn btn-lg btn-primary" type="submit">Login</button>
                  </div>
              </fieldset>
            </form>
            
            <p class="mt-2 text-muted">Not have an account yet? Let's <a href="/register">create</a> one</p>
          </div>
        </div>
      </div>
    </div>
</div>
<%- include('./includes/footer') %>