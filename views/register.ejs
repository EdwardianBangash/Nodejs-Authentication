<%- include('./includes/header') %>
<div class="container">
    <div class="row mt-5">
        <div class="col-6 mx-auto">
            <div class="card p-2">
                <div class="card-body">
                    <h2 class="card-title text-center"><i class="fas fa-user-plus"></i> Create Account</h2>
                    <%- include('./partials/message') %>
                    <form action="/register" method="POST">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control mt-1" id="name" name="name" placeholder="Name..."
                                value="<%= typeof name != 'undefined' ? name : '' %>">
                        </div>
                        <div class="form-group mt-1">
                            <label for="email">Email address:</label>
                            <input type="text" class="form-control mt-1" id="email" name="email"
                                placeholder="Email address..." value="<%= typeof email != 'undefined' ? email : '' %>">
                        </div>
                        <div class="form-group mt-1">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control mt-1" id="password" name="password"
                                placeholder="Password..." value="<%= typeof email != 'undefined' ? password : '' %>">
                        </div>
                        <div class="form-group mt-1">
                            <label for="password2">Confirm Password:</label>
                            <input type="password" class="form-control mt-1" id="password2" name="confirm_password"
                                placeholder="Confirm password..."
                                value="<%= typeof email != 'undefined' ? confirm_password : '' %>">
                        </div>
                        <div class="d-grid gap-2 mt-2">
                            <button type="submit" class="btn btn-block btn-primary">Register</button>
                        </div>
                    </form>

                    <p class="mt-2 text-muted">Already have an account? Please <a href="/login">login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./includes/footer') %>